      "      Req data;",
      " ",
      "      js.at(\"token\").get_to(data.token);",
      "      js.at(\"user\").get_to(data.user);",
      " ",
      "      return std::move(data);",
      "    }",
      " ",
      "    WebUserName user;",
      "    std::string token;",
      "  };",
      " ",
      "  struct Resp {",
      "    static std::string Descriptor() {",
      "      return Req::Descriptor();",
      "    }",
      " ",
      "    nlohmann::json Encode() const {",
      "      nlohmann::json data{",
      "      };",
      "      return std::move(data);",
      "    }",
      "  };",
      " ",
      "  explicit $1Controller(WebServer *web, pcs::HttpRequest *request);",
      " ",
      "  ~$1Controller();",
      " ",
      "  void Run() override;",
      " ",
      " private:",
      "  Req req_;",
      "};"
