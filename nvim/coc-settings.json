{
	"languageserver": {
		"ccls": {
			"trace.server": "verbose",
			"command": "ccls",
			"filetypes": [
				"c",
				"cpp",
				"objc",
				"objcpp"
			],
			"rootPatterns": [
				".ccls",
				"compile_commands.json",
				".git/",
				".hg/",
				".projectile"
			],
			"initializationOptions": {
				"cache": {
					"directory": "d:/tmp/ccls"
				},
				"compilationDatabaseDirectory": "build"
			}
		},
		"golang": {
			"command": "gopls",
			"rootPatterns": [
				"go.mod",
				".vim/",
				".git/",
				".hg/",
				".projectile"
			],
			"filetypes": [
				"go"
			],
			"initializationOptions": {
				"usePlaceholders": true
			}
		},
		"flow": {
			"command": "flow",
			"args": [
				"lsp"
			],
			"filetypes": [
				"javascript",
				"javascriptreact"
			],
			"initializationOptions": {},
			"requireRootPattern": true,
			"settings": {},
			"rootPatterns": [
				".projectile"
			]
		}
	},
	"coc.preferences.extensionUpdateCheck": "never",
	"suggest.noselect": false,
	"tsserver.log": "verbose",
	"coc.preferences.formatOnSaveFiletypes": [
		"markdown",
		"json",
		"css",
		"html",
		"javascript",
		"typescript"
	]
}
