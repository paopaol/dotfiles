    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/", ".projectile"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "coc.preferences.extensionUpdateCheck": "never",
  "suggest.noselect": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "markdown",
    "json",
    "css",
    "html",
    "javascript",
    "typescript",
    "yaml"
  ],
  "snippets.autoTrigger": false,
  "yaml.format.enable": true,
  "snippets.ultisnips.directories": ["ultisnips", "UltiSnips"],
  "explorer.width": 50,
  "explorer.previewAction.onHover": "labeling",
  "explorer.keyMappings.global": {
    "*": "toggleSelection",
    "<tab>": ["expanded?", "collapse", "expand"],
    "h": "collapse",
    "l": ["expandable?", "expand", "open"],
    "J": ["toggleSelection", "nodeNext"],
    "K": ["toggleSelection", "nodePrev"],
    "gl": "expandRecursive",
    "gh": "collapseRecursive",
    "<cr>": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
    "e": "open",
    "s": "open:split",
    "S": "open:split:plain",
    "E": "open:vsplit",
    "t": "open:tab",
    "<bs>": "gotoParent",
    "gp": "preview:labeling",

    "y": "copyFilepath",
    "Y": "copyFilename",
    "c": "copyFile",
    "x": "cutFile",
    "p": "pasteFile",
    "d": "delete",
    "D": "deleteForever",

    "a": "addFile",
    "A": "addDirectory",
    "r": "rename",

    ".": "toggleHidden",
    "R": "refresh",

    "?": "help",
    "q": "quit",
    "<esc>": "esc",
    "X": "systemExecute",
    "gd": "listDrive",

    "f": "search",
    "<C-f>": "searchRecursive",

    "gf": "gotoSource:file",
    "gb": "gotoSource:buffer",

    "[[": "sourcePrev",
    "]]": "sourceNext",

    "[d": "diagnosticPrev",
    "]d": "diagnosticNext",

    "[c": "gitPrev",
    "]c": "gitNext",
    "<<": "gitStage",
    ">>": "gitUnstage"
  }
}
